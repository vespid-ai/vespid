{
  "name": "vespid",
  "private": true,
  "license": "AGPL-3.0-only",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "build": "pnpm -r --if-present build",
    "dev": "pnpm exec dotenv -e .env -- pnpm --parallel --filter @vespid/api --filter @vespid/web --filter @vespid/worker dev",
    "lint": "pnpm -r --if-present lint",
    "test": "pnpm -r --if-present test",
    "typecheck": "pnpm -r --if-present typecheck",
    "migrate": "pnpm exec dotenv -e .env -- pnpm --filter @vespid/db migrate",
    "migrate:check": "pnpm exec dotenv -e .env -- pnpm --filter @vespid/db migrate:check",
    "check:boundary": "bash scripts/check-no-enterprise-imports.sh",
    "check:licenses": "node scripts/check-license-spdx.mjs",
    "check:mirror": "node scripts/check-oss-mirror-dry-run.mjs",
    "check:secrets": "bash scripts/check-secrets.sh",
    "mirror:prepare": "node scripts/prepare-community-mirror.mjs --out .community-mirror",
    "sbom:generate": "node scripts/create-sbom.mjs"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
